<%- include('../partials/header') %>
<h1 style="margin-top:10%">Users</h1>

 <table class="table table-hover table-striped">
	<thead>
   	<tr>
      	<th scope="col">First Name</th>
      	<th scope="col">Last Name</th>
      	<th scope="col">Email</th>
   	</tr>
	</thead>
 <tbody>

<% users.forEach(function(user){ %>
  <tr>
   	<td><a href="users/view/<%= user.id %>"><%= user.first_name %></a></td>
   	<td><%= user.last_name %></td>
   	<td><%= user.email %></td>
  </tr>
<% }); %>

</tbody>
</table>

<%- include('../partials/footer') %>

<%- include('../partials/header') %>
 
  <div class="panel panel-default" style="margin-top:10%">
             <div class="panel-heading"><h3><%= user.first_name %> <%= user.last_name %></h3></div>
             <div class="panel-body">
             <%
               if(user.id % 2 == 0) {
              %>
                 <img style="align:right;" src="https://randomuser.me/api/portraits/men/<%= user.id %>.jpg" />
              <%} else {%>
                 <img style="align:right;" src="https://randomuser.me/api/portraits/women/<%= user.id %>.jpg" />
              <%}%>
             Here we would put clever stuff like bio info. 
             Oh, we do have an Email: <b><%= user.email %></b>.</div>
             <div class="panel-footer"><a href="/users">Back</a></div>
  </div>
         
<%- include('../partials/footer') %>
